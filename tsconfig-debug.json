{
  "compilerOptions": {
    "target": "es5",
    "module": "CommonJS",
    "lib": ["es6"],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "lib",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "include": [
    "./typings.d.ts",
    "./src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "lib"
  ]
}
